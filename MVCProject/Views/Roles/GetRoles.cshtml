

@model IEnumerable<Entities.ViewModels.RoleViewModel>
<link href="~/css/Card.css" rel="stylesheet" />
<style>
    .navigation-otions {
    margin:10px 0px;
    }
</style>
<div class="component-section section" id="roles_List_Section">
    <div class="navigation-options" style="        margin-bottom: 30px
">
        <a class="btn" asp-controller="Roles" asp-action="AddRole">
            <i class="fa fa-plus-circle"></i>
            <span class="nav-text">
                Add Role
            </span>
        </a>
        
    </div>
    <div class="roles row">
        @foreach (var role in Model)
        {
            <div class="col-md-4">


                <div class="role-card  info-card card">

                    <div class="role-card-header d-flex card-header">
                        <a class="user-type-image" href="javascript:void(0);">
                            <img src="/Images/NoProfile.png" width="60">
                        </a>
                        <h5 class="card-title"> </h5>
                        <div class="card-subheader">
                            <h6 class="card-title">@role.RoleName</h6>
                            <p class="card-subtitle">
                                &nbsp;
                                <span>&nbsp;</span>
                            </p><p>
                            </p>
                        </div>
                        <div class="role-options">
                            <a asp-controller="Roles" class="btn" asp-action="EditRole" asp-route-Id="@role.RoleId"><i class="fa fa-edit"></i></a>

                            <a asp-controller="Roles" class="btn" asp-action="DeleteRole" asp-route-Id="@role.RoleId;"><i class="fa fa-remove"></i></a>
                        </div>
                    </div>
                    <div class="card-footer user-card-border">
                        <a title="View More" href="employee-detail.html" class="btn pmd-btn-flat pmd-ripple-effect btn-primary">View More</a>
                    </div>

                </div>
            </div>
        }

    </div>

</div>