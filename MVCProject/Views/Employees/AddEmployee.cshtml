    function onLoadFunctions() {
        //GetAllDropdowns();

        if ($("#Id").val()!="0") {
            var countryid = $("#Addresses_0__CountryMasterId").val();
            var stateid = $("#hdfn_state_0_id").val();
            var cityid = $("#hdfn_city_0_id").val();
            LoadCities(stateid);
            LoadStates(countryid);
        }
      





    }

    function OnCountryChange(e) {

        var countryId = $(e).val();
        $("#hdfn_state_0_id").val('0')
        $("#hdfn_city_0_id").val('0');
        $("#Addresses_0__CityMasterId").val('0');
        LoadStates(countryId)
    }

    function LoadStates(countryId)
    {
        $.ajax(
            {
                type: "get",
                contentType: "application/json;charset=utf-8",
                dataType: "json",
                //data: JSON.stringify({ countryId: "1" }),

                url: "https://localhost:44320/api/Dropdowns/States/" + countryId + "",
                success: function (data) {
                    var html = "<option value='0' >Select State</option>"

                    $.each(data, function (i, o) {
                        html += "<option value='" + o.key + "'>" + o.value + "</option>"
                    })

                    $("#Addresses_0__StateMasterId").html(html);

                    $("#Addresses_0__StateMasterId").val($("#hdfn_state_0_id").val());


                },
                error: function () {
                    alert("error")
                }

            })
    }

    function OnStateChange(e) {

        var stateId = $(e).val();
         $("#hdfn_city_0_id").val(0);
        LoadCities(stateId);

    }

    function LoadCities(stateId)
    {
        $.ajax(
            {
                type: "get",
                contentType: "application/json;charset=utf-8",
                dataType: "json",
                //data: JSON.stringify({ countryId: "1" }),

                url: "https://localhost:44320/api/Dropdowns/Cities/" + stateId + "",
                success: function (data) {

                    var html = "<option value='0' >Select City</option>"

                    $.each(data, function (i, o) {
                        html += "<option value='" + o.key + "'>" + o.value + "</option>"
                    })
                    $("#Addresses_0__CityMasterId").html(html);


                   $("#Addresses_0__CityMasterId").val($("#hdfn_city_0_id").val());


                },
                error: function () {
                    alert("error")
                }

            })
    }
    function buildDropDown(options, id, defaultOption) {


        var html = "<option value=0 >" + defaultOption + "</option>"

        $.each(options, function (i, o) {
            html += "<option value=" + o.key + ">" + o.value + "</option>"
        })

        $("#" + id).html(html);
        return html;

    }

    function GetAllDropdowns() {


        return;
        $.ajax(
            {
                type: "get",
                contentType: "application/json;charset=utf-8",
                dataType: "json",
                //data: JSON.stringify({ countryId: "1" }),

                url: "https://localhost:44320/api/Dropdowns/GetAddEmployeeDropdowns",
                success: function (data) {
                    var AddEmployeeDropdowns = data;
                    buildDropDown(AddEmployeeDropdowns.maritialStatuses, "MaritialStatusId", "Select Maritial Status")
                    buildDropDown(AddEmployeeDropdowns.genders, "GenderId", "Select Gender")
                    buildDropDown(AddEmployeeDropdowns.departments, "DepartmentId", "Select Department")
                    buildDropDown(AddEmployeeDropdowns.countries, "Addresses_0__CountryMasterId", "Select Country")
                    buildDropDown(AddEmployeeDropdowns.nationalities, "NationalityId", "Select Nationality")

                },
                error: function () {
                    alert("error")
                }

            })
    }

</script>