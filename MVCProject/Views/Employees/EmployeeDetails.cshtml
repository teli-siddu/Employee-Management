
@model Entities.ViewModels.Employee.EmployeeViewModel


<link href="~/css/Card.css" rel="stylesheet" />


<style>
    .emp-btn-rnd:hover {
        color: #fff;
        background-color: #929495;
        border-color: #929495;
    }

    .emp-submit-btn {
        border-radius: 25px;
    }

    .action-buttons {
        position: relative;
        bottom: 4rem;
        left: 5.6rem;
    }

    .emp-btn-rnd:focus, .emp-btn-rnd:active {
        outline: none !important;
        box-shadow: none !important;
    }

    .emp-btn-rnd {
        width: 40px;
        height: 40px;
        min-width: 40px;
        border-radius: 50%;
        outline: none
    }

    .btn-rnd {
        border-radius: 50%
    }

    .btn-outline-dark {
        color: #929495;
        border-color: #929495;
    }

    .register-container .form-control {
        border: none;
        border-bottom: 1px solid #3333;
        border-radius: inherit;
        background: transparent;
    }

    .register-container input:focus {
        outline: none;
        border-bottom: 1px solid blue;
        box-shadow: none;
    }

    .input-group-addon {
        font-size: 25px;
        color: #3333;
    }

    .modal-content {
        border: none !important;
    }

    .modal-header {
        border: none !important;
    }

    .register-container {
        /*background-image: repeating-linear-gradient(45deg, black, transparent 100px);*/
    }

    .card-title-seperator-center:after, .card-title-seperator-right:after, .card-title-seperator:after {
        content: "";
        display: block;
        width: 30px;
        height: 4px;
        border-radius: 3px;
        background-color: #F58634;
        position: relative;
        bottom: -3px;
    }

    .form-group {
        display: none;
    }
</style>

