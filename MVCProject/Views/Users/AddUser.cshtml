
@model Entities.ViewModels.Users.AddUserViewModel;

    <link href="~/css/Card.css" rel="stylesheet" />
<style>
    .register-container .form-control {
        border: none;
        border-bottom: 1px solid #3333;
        border-radius: inherit;
        background: transparent;
    }

    .register-container input:focus {
        outline: none;
        border-bottom: 1px solid blue;
        box-shadow: none;
    }

    .input-group-addon {
        font-size: 25px;
        color: #3333;
    }

    .modal-content {
        border: none !important;
    }

    .modal-header {
        border: none !important;
    }

    .register-container {
        /*background-image: repeating-linear-gradient(45deg, black, transparent 100px);*/
    }

   
</style>



<div class="register-container h-100 p-1">
    <div class="">


        <div class="card register-card">
            @*<div class="modal-header">
                    <h3 class="modal-title w-100 text-center">
                        <img src="~/Images/NoProfile.png" />
                    </h3>
                </div>*@
            <div class="card-body register-card-body">

                <div class="d-flex">
                    <h5 class="card-title register-card-titrle card-title-seperator">
                        User Details
                    </h5>

                    
                </div>

                <form  method="post">

                    <input type="hidden" asp-for="UserId" />
                    <div class="row">


                        <div class="col-md-3">
                            <div class="form-group">
                                <div class="input-group">
                                    <span class="input-group-addon">
                                        <span class="fa fa-user "></span>
                                    </span>
                                    <input type="text" asp-for="UserName" class="form-control" placeholder="User Name" />
                                </div>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="form-group">
                                <div class="input-group">
                                    <span class="input-group-addon">
                                        <span class="fa fa-fort-awesome"></span>
                                    </span>
                                    <input type="text" asp-for="FirstName" class="form-control" placeholder="First Name" />
                                </div>
                            </div>
                        </div>

                        <div class="col-md-3">
                            <div class="form-group">
                                <div class="input-group">
                                    <span class="input-group-addon">
                                        <span class="fa fa-fort-awesome"></span>
                                    </span>
                                    <input type="text" asp-for="LastName" class="form-control" placeholder="Last Name" />
                                </div>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="form-group">
                                <div class="input-group">
                                    <span class="input-group-addon">
                                        <span class="fa fa-fort-awesome"></span>
                                    </span>
                                    <input type="text" asp-for="DateOfBirth" class="form-control" placeholder="Date of Birth" />
                                </div>
                            </div>
                        </div>
                       
                        <div class="col-md-3">
                            <div class="form-group">
                                <div class="input-group">
                                    <span class="input-group-addon">
                                        <span class="fa fa-phone"></span>
                                    </span>
                                    <input type="text" asp-for="Email" class="form-control" placeholder="Email" />

                                </div>

                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="form-group">
                                <div class="input-group">
                                    <span class="input-group-addon">
                                        <span class="fa fa-phone"></span>
                                    </span>
                                    <input type="text" asp-for="Mobiles[0].MobileNumber" class="form-control" placeholder="Phone Number" />

                                </div>

                            </div>
                        </div>

                        <div class="col-md-3">
                            <div class="form-group">
                                <div class="input-group">
                                    <span class="input-group-addon">
                                        <span class=""></span>
                                    </span>
                                    @{
                                            List<Entities.Helper.KeyValue<int, string>> departments = Model.departments;

                                            departments.Add(new Entities.Helper.KeyValue<int, string>(0, "Select Department"));
                                        <select class="form-control" asp-for="@Model.DepartmentId" asp-items="@(new SelectList(departments,"Key","Value"))">
                                        </select>

                                    }


                                </div>

                            </div>
                        </div>


                        <div class="col-md-3">
                            <div class="form-group">
                                <div class="input-group">
                                    <span class="input-group-addon">
                                        <span class="fa fa-lock"></span>
                                    </span>
                                    <input type="password" asp-for="Password" class="form-control" placeholder="Password" />

                                </div>

                            </div>
                        </div>

                        <div class="col-md-3">

                            <div class="form-group">
                                <div class="input-group">
                                    <span class="input-group-addon">
                                        <span class="fa fa-lock"></span>
                                    </span>
                                    <input type="password" asp-for="ConfirmPassword" class="form-control" placeholder="Confirm Password" />

                                </div>

                            </div>
                        </div>
                    </div>
                        <div class="roles-details" id="Roles_Details">
                            <div class="d-flex">
                                <h5 class="card-title register-card-titrle card-title-seperator">
                                    Roles Details
                                </h5>

                               
                            </div>

                            <div class="row" id="">

                                @for (int i = 0; i < Model.Roles.Count; i++)
                                {

                                    <input type="hidden" asp-for="@Model.Roles[i].RoleName" />
                                    <input type="hidden" asp-for="@Model.Roles[i].RoleId" />
                                    @*@if (@Model.Roles[i].IsSelected)
                    {
                        <div class="col-md-3">
                            <div class="media-body">
                                <p>@Model.Roles[i].RoleName</p>
                            </div>
                        </div>
                    }*@
                                    <div class="col-md-3">
                                        <div class="form-group">
                                            <div class="input-group">
                                                <label asp-for="@Model.Roles[i].IsSelected"> @Model.Roles[i].RoleName </label>  <input type="checkbox" asp-for="@Model.Roles[i].IsSelected" class="form-check-input" />
                                            </div>
                                        </div>
                                        <div>

                                        </div>
                                    </div>


                                }


                            </div>
                           

                            <div class="form-submit">
                                <div class="col-md-12">
                                    <div class="form-group">
                                        @if (Model.UserId == 0)
                                        {
                                            <button type="submit" class="btn btn-success btn-sm" asp-action="AddUser" asp-controller="Users">Register</button>
                                        }
                                        else
                                        {
                                            <button type="submit" class="btn btn-success btn-sm" asp-action="EditUser" asp-controller="Users">Update</button>
                                        }

                                    </div>
                                </div>

                            </div>




                       
                        </div>

</form>
            </div>
        </div>


    </div>
</div>









